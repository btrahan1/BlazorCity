@inherits LayoutComponentBase
@inject Microsoft.JSInterop.IJSRuntime JS

<div id="city-container"></div>

@inject BlazorCity.Services.CityState CityState
@inject BlazorCity.Services.EconomyInterop EconomyInterop
@inject IJSRuntime JS

<div class="ui-layer" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;">
    <!-- HUD -->
    <div class="hud-top">
        <div class="hud-item">💰 §@CityState.Funds.ToString("N0")</div>
        <div class="hud-item" style="color: @(CityState.NetIncome >= 0 ? "#4caf50" : "#f44336")">
            (@(CityState.NetIncome >= 0 ? "+" : "")§@CityState.NetIncome.ToString("N0")/mo)
        </div>
        <div class="hud-item">👥 @CityState.Population.ToString("N0")</div>
        <div class="hud-item">📅 @CityState.GameTime.ToString("MMM d, yyyy")</div>
        <button class="settings-btn" @onclick="(() => showSettings = true)">⚙️</button>
    </div>

    <BlazorCity.Pages.Toolbox />
    <BlazorCity.Shared.SettingsModal @bind-IsVisible="showSettings" />
    @Body
</div>

<style>
    /* ... existing styles ... */
    .hud-top {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 5px 20px; /* Reduced vertical padding */
        border-radius: 20px;
        display: flex;
        gap: 20px;
        align-items: center; /* Center items vertically */
        font-family: 'Segoe UI', sans-serif;
        font-weight: bold;
        font-size: 1.2rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        pointer-events: auto; 
        white-space: nowrap; /* Prevent wrap on mobile */
        max-width: 95vw;
        overflow-x: auto;
    }
    .settings-btn {
         background: transparent;
         border: none;
         font-size: 1.2rem;
         cursor: pointer;
         padding: 0 5px;
         transition: transform 0.2s;
    }
    .settings-btn:hover { transform: rotate(90deg); }
    .hud-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }
</style>

@code {
    private bool showSettings = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var dotNetRef = DotNetObjectReference.Create(EconomyInterop);
            
            // 1. Check for Save (PRE-INIT) to get Grid Size
            BlazorCity.Services.CitySaveData loadedData = null;
            int gridSize = 20;

            var json = await JS.InvokeAsync<string>("localStorage.getItem", "BlazorCitySave");
            if (!string.IsNullOrEmpty(json))
            {
                try 
                {
                    loadedData = System.Text.Json.JsonSerializer.Deserialize<BlazorCity.Services.CitySaveData>(json);
                    if (loadedData?.Settings != null)
                    {
                        gridSize = loadedData.Settings.GridSize;
                        Console.WriteLine($"Found save! Loading GridSize: {gridSize}");
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine("Error checking save: " + ex.Message);
                }
            }

            // 2. Initialize Engine (With correct Grid Size)
            await JS.InvokeVoidAsync("CityEngine.init", "city-container", dotNetRef, gridSize);
            
            CityState.OnChange += StateHasChanged;

            // 3. Restore Full State if we have it
            if (loadedData != null)
            {
                try 
                {
                    // Restore C# State (Funds, Sim, Settings)
                    CityState.LoadState(loadedData);
                    
                    // Restore Visuals
                    if (CityState.PlacedBuildings != null)
                    {
                        foreach (var b in CityState.PlacedBuildings)
                        {
                            await JS.InvokeVoidAsync("CityEngine.placeBuilding", b.Name, b.X, b.Y, 0); 
                        }
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine("Error restoring state: " + ex.Message);
                }
            }
        }
    }

    public void Dispose()
    {
        CityState.OnChange -= StateHasChanged;
    }
}
